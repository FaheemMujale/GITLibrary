<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingRight="4dp"
    android:paddingLeft="2dp"
    android:paddingBottom="10dp"
    android:background="@drawable/viewshape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Book Name: "
        android:id="@+id/textView9"
        android:textColor="#271b42"
        android:layout_alignTop="@+id/book_name_search"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="name chfhvch cf c fg fcg g  gxfg  gxfgfg gxfg gxdgxdg "
        android:maxHeight="70dp"
        android:textColor="#271b42"
        android:id="@+id/book_name_search"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView9"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Author: "
        android:id="@+id/textView10"
        android:textColor="#271b42"
        android:paddingTop="10dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_below="@+id/book_name_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="faheem hgfh hfchfch ngchgc vhchfc hfhfch chch cfhv chfgch"
        android:textColor="#c12206"
        android:id="@+id/author_name_search"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/textView10"
        android:layout_below="@+id/book_name_search"
        android:layout_toEndOf="@+id/textView10"
        android:maxHeight="70dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_action_search"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9" />
</RelativeLayout>